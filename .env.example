# -------------------------------------------
# 🌍 공통 및 데이터베이스 설정 (모든 앱에 필요)
# -------------------------------------------
# Node.js 환경 (development, production, test)
NODE_ENV=development

# 데이터베이스 연결 정보
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME= # 여기에 DB 사용자 이름을 입력하세요
DB_PASSWORD= # 여기에 DB 비밀번호를 입력하세요
DB_DATABASE=kimp_db

# TypeORM 로깅 활성화 여부
DB_LOGGING=true

# -------------------------------------------
# 📡 Redis 설정 (Feeder, Initiator에 필요)
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -------------------------------------------
# ⚙️ 애플리케이션 포트 설정 (각 앱 실행 시 필요)
# -------------------------------------------
FEEDER_PORT=3001
INITIATOR_PORT=3002
FINALIZER_PORT=3003
DASHBOARD_BE_PORT=4000 # (미래 확장용)

# -------------------------------------------
# 🏦 거래소 API 키 (Feeder, Initiator, Finalizer에 필요)
# -------------------------------------------
# 시뮬레이션 모드로만 테스트할 경우 이 값들은 비워두어도 괜찮습니다.
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# -------------------------------------------
# 📈 차익거래 전략 설정 (Initiator, Finalizer에 필요)
# -------------------------------------------
# 초기 투자금액 (단위: KRW)
INVESTMENT_AMOUNT_KRW=100000

# 거래를 시작할 최소 스프레드 (예: 0.5%)
MIN_SPREAD_PERCENT=0.5

# -------------------------------------------
# 🔔 알림 설정 (kimp-core의 TelegramService에 필요)
# -------------------------------------------
# 텔레그램 봇 토큰
TELEGRAM_BOT_TOKEN=

# 알림을 받을 텔레그램 채팅 ID
TELEGRAM_CHAT_ID=

# -------------------------------------------
# 🔐 보안 설정 (kimp-core에 필요)
# -------------------------------------------
# JWT 시크릿 키 (아무 랜덤한 문자열 입력)
JWT_SECRET=YOUR_RANDOM_SECRET_KEY_HERE